[Unit]
Description=Control Interface
Requires=mesh.service
After=mesh.service

[Service]
Type=simple
User=sad
Group=sad
Restart=always
RestartSec=2
ExecStart=/bin/sh -c ". /opt/ros/foxy/setup_fog.sh; ros2 launch control_interface control_interface.py"
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
