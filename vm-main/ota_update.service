[Unit]
Description="Drone mission data recorder"
Requires=update_agent.service
After=update_agent.service

[Service]
Type=simple
User=sad
Group=sad
Restart=always
RestartSec=2
ExecStart=/bin/sh -c ". /opt/ros/foxy/setup_fog.sh; /opt/ros/foxy/bin/ota-update-daemon"

[Install]
WantedBy=multi-user.target
